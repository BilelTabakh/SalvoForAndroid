<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.esprit.pim.smartsuitecase.TrackingActivity" >

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        class="com.google.android.gms.maps.MapFragment" />

    <TextView
        android:id="@+id/receivedSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/title_send_sms"
        android:layout_marginTop="10dp"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal" >

        <!--
              <Button
            android:id="@+id/btnSendSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/button_send_sms"
            android:textSize="30sp" />
        -->

        <ImageButton
            android:id="@+id/btnSendSMS"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_target_72"
            android:text="@string/button_send_sms"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/btnGetLocationOfSmartSuitecase"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="center"
             android:background="#FFFFFF"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_refresh_72"
            android:text="Suitecase"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>